<%= stylesheet_link_tag "reserve", "data-turbo-track": "reload" %>

<h1 class="page-title">Flights</h1>

<section class="sectionVols mt-10">
  <div class="d-flex flex-column">
    <h1> Les Vols :</h1>

    <% @flights.each do |flight| %>
    <div class="wrapper">
      <div class="outer">
        <div class="content animated fadeInLeft d-flex">
          <div class="d-flex flexColumn m-20">
            <div class="d-flex justify-space-around">
              <div class="d-flex">
                <p class="titlePlace">Affaires : </p>
                <span class="bg animated fadeInDown"><%= flight.business_class_seats %></span>
              </div>
              <div class="d-flex">
                <p class="titlePlace">Economiques : </p>
                <span class="bg animated fadeInDown"><%= flight.economy_class_seats %></span>
              </div>
            </div>
            <h1>Numéro : <%= flight.number %></h1>
          </div>
          <div class="d-flex flexColumn m-20">
            <h1><%= flight.departure_airport %> => <%= flight.arrival_airport %></h1>
            <h3><td><%= flight.departure_date.strftime("%m/%d/%Y %I:%M %p") %></h3>
          </div>
          <div class="d-flex flexColumn m-20">
            <h3>Date d'arrivée :</h3>
            <h3><%= (flight.departure_date + flight.duration.minutes).strftime("%m/%d/%Y %I:%M %p") %></h3>
          </div>
          <div class="button m-5">
            <%= link_to "Réserver", new_reservation_path(flight_id: flight.id) %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
<%= paginate @flights %>