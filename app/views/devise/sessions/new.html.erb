<%= stylesheet_link_tag "formulaire", "data-turbo-track": "reload" %>
<h2>Log in</h2>

<div class="container">
  <div class="row d-flex justify-content-center mt-5">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
      <div class="card py-3 px-2">
      <div class="division">
        <div class="row">
          <div class="connexion"><span>Connexion</span></div>
          <div class="col-3"><div class="line r"></div></div>
        </div>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "inputform",placeholder:"Email*"%>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "current-password",class: "inputform",placeholder:"Password*" %>
        </div>
        <div class="row">
          <div class="col-md-6 col-12">
            <div class="form-group form-check">
              <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me ,class: "form-check-input"%>
                <%= f.label :remember_me ,class: "form-check-label"%>
              <% end %>
            </div>
          </div>
          <div class="col-md-6 col-12 bn">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name) %><br />
            <% end %>
          </div>
        </div>
          <div class="form-group mt-3">
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Enregistrer", new_registration_path(resource_name),class: "btn btn-block btn-primary btn-lg" ,style: "width:100%"%>
            <% end %>
          </div>
        <div class="form-group mt-3">
          <%= f.submit "Connexion" ,class:"btn btn-block btn-primary btn-lg"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
